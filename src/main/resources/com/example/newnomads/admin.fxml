<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.newnomads.AdminController"
           prefWidth="1000" prefHeight="700"
           stylesheets="@../../../css/admin.css"
           styleClass="admin-root">

    <!-- Glavni sadržaj -->
    <VBox spacing="15" alignment="TOP_CENTER">
        <!-- Naslov -->
        <Label text="Admin Panel" styleClass="admin-title"/>

        <!-- Dugmad -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Radnici" onAction="#showRadnici" styleClass="admin-button"/>
            <Button text="Firme" onAction="#showFirme" styleClass="admin-button"/>
            <Button text="Regruteri" onAction="#showRegruteri" styleClass="admin-button"/>
            <Button text="Dodaj regrutera" onAction="#showAddRegruter" styleClass="admin-button"/>
            <Button text="Dodaj radnika" onAction="#showAddRadnik" styleClass="admin-button"/>
            <Button text="Logout" onAction="#logout" styleClass="admin-button"/>
        </HBox>

        <!-- Tabela -->
        <TableView fx:id="table" prefHeight="500" prefWidth="900" styleClass="admin-table"/>
    </VBox>

    <!-- Overlay modal -->
    <StackPane fx:id="overlay" visible="false" managed="false" styleClass="admin-overlay"
               prefWidth="1000" prefHeight="700" alignment="CENTER">

        <!-- Regruter Box -->
        <VBox fx:id="addRegruterBox" spacing="10" alignment="TOP_CENTER" visible="false"
              styleClass="admin-modal" maxWidth="400" maxHeight="300">
            <TextField fx:id="emailField" promptText="Email" maxWidth="350"/>
            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="350"/>
            <TextField fx:id="imeField" promptText="Ime regrutera" maxWidth="350"/>
            <HBox spacing="10" alignment="CENTER">
                <Button text="Spremi" onAction="#addRegruter" styleClass="admin-button" maxWidth="150"/>
                <Button text="Zatvori" onAction="#closeModal" styleClass="admin-button" maxWidth="150"/>
            </HBox>
            <Label fx:id="msg"/>
        </VBox>

        <!-- Radnik Box -->
        <ScrollPane fx:id="addRadnikBox" visible="false" managed="false"
                    maxWidth="500" maxHeight="600" fitToWidth="true" fitToHeight="true">
            <content>
                <VBox spacing="10" alignment="TOP_CENTER" styleClass="admin-modal">
                    <TextField fx:id="imeRadnikField" promptText="Ime" maxWidth="400"/>
                    <TextField fx:id="prezimeRadnikField" promptText="Prezime" maxWidth="400"/>
                    <TextField fx:id="brojPasosaField" promptText="Broj pasoša" maxWidth="400"/>
                    <ComboBox fx:id="drzavaCombo" promptText="Država" maxWidth="400"/>
                    <ComboBox fx:id="granaCombo" promptText="Grana rada" maxWidth="400"/>
                    <ComboBox fx:id="spolCombo" promptText="Spol" maxWidth="400"/>
                    <DatePicker fx:id="datumRodjenjaPicker" promptText="Datum rođenja" maxWidth="400"/>
                    <DatePicker fx:id="doKadPasosPicker" promptText="Do kada traje pasoš" maxWidth="400"/>
                    <DatePicker fx:id="doKadVizaPicker" promptText="Do kada traje viza (opcionalno)" maxWidth="400"/>
                    <ComboBox fx:id="statusCombo" promptText="Status" maxWidth="400"/>
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="Spremi" onAction="#addRadnik" styleClass="admin-button" maxWidth="150"/>
                        <Button text="Zatvori" onAction="#closeModal" styleClass="admin-button" maxWidth="150"/>
                    </HBox>
                    <Label fx:id="msgRadnik"/>
                </VBox>
            </content>
        </ScrollPane>

    </StackPane>

</StackPane>
