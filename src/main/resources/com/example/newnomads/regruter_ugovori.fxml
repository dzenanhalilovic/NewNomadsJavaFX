<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.newnomads.RegruterUgovoriController"
            stylesheets="@../../../css/potraznja.css"
            styleClass="root">

    <center>
        <VBox spacing="25" alignment="CENTER">

            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Naslov -->
            <Label text="Ugovori" styleClass="title-label"/>

            <!-- Tabela -->
            <TableView fx:id="ugovoriTable"
                       prefHeight="400"
                       prefWidth="900"
                       styleClass="custom-table">

                <columns>
                    <TableColumn fx:id="radnikCol" text="Radnik" prefWidth="140"/>
                    <TableColumn fx:id="firmaCol" text="Firma" prefWidth="140"/>
                    <TableColumn fx:id="datumPocetkaCol" text="Datum početka" prefWidth="120"/>
                    <TableColumn fx:id="datumKrajaCol" text="Datum kraja" prefWidth="120"/>
                    <TableColumn fx:id="statusCol" text="Status" prefWidth="100"/>
                    <TableColumn fx:id="opisCol" text="Opis / Napomena" prefWidth="220"/>
                </columns>
            </TableView>

            <!-- Dugmad -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="⬅ Nazad"
                        onAction="#goBack"
                        styleClass="action-button"/>

                <Button text="Dodaj ugovor"
                        onAction="#dodajUgovor"
                        styleClass="action-button"/>
            </HBox>

        </VBox>
    </center>

</BorderPane>
