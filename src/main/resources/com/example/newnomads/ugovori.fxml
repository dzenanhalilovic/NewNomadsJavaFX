<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.newnomads.FirmaUgovoriController"
            stylesheets="@../../../css/potraznja.css"
            styleClass="root">

    <center>
        <VBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Naslov -->
            <Label text="Ugovori" styleClass="title-label"/>

            <!-- Tabela -->
            <TableView fx:id="ugovoriTable" prefWidth="700" prefHeight="400" styleClass="custom-table">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colRadnik" text="Radnik" prefWidth="120"/>
                    <TableColumn fx:id="colDatumKreiranja" text="Kreirano" prefWidth="120"/>
                    <TableColumn fx:id="colDatumPocetka" text="Početak" prefWidth="100"/>
                    <TableColumn fx:id="colDatumKraja" text="Kraj" prefWidth="100"/>
                    <TableColumn fx:id="colStatus" text="Status" prefWidth="80"/>
                    <TableColumn fx:id="colOpis" text="Opis" prefWidth="150"/>
                </columns>
            </TableView>

            <!-- Dugmad -->
            <HBox spacing="10">
                <Button fx:id="btnPrihvati" text="Prihvati" onAction="#prihvatiUgovor"
                        styleClass="action-button" visible="false"/>

                <Button fx:id="btnOdbij" text="Odbij" onAction="#odbijUgovor"
                        styleClass="action-button" visible="false"/>

                <Button text="⬅ Nazad" onAction="#goBack"
                        styleClass="action-button"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
